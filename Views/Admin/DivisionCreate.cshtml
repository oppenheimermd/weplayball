@model WePlayBall.Models.Division

@{
    ViewData["Title"] = "New Division";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Index">All</a>
        </li>
        <li>
            <span href="">New Division</span>
        </li>
    </ul>
}

<form asp-action="DivisionCreate">
    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Add new division</legend>
        <div asp-validation-summary="ModelOnly" class="uk-form-danger"></div>

        <div class="uk-margin">
            <input asp-for="DivisionName" class="uk-input" placeholder="Division name" />
            <span asp-validation-for="DivisionName" class="uk-form-danger"></span>
        </div>

        <div class="uk-margin">
            <input asp-for="DivisionCode" class="uk-input" placeholder="Four letter code for this new division" />
            <span asp-validation-for="DivisionCode" class="uk-form-danger"></span>
        </div>


        <div class="uk-margin">
            <input type="submit" value="Create" class="uk-button uk-button-primary" />
        </div>

    </fieldset>
</form>



<div>
    <a asp-action="DivisionsAll" asp-controller="Admin">Back to List</a>
</div>




