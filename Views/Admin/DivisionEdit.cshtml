@model WePlayBall.Models.Division

@{
    ViewData["Title"] = "Edit Division";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section DefaultHeader{
    <ul class="uk-breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="DivisionsAll">All</a>
        </li>
        <li>
            <span href="">Edit division</span>
        </li>
    </ul>
}

<form asp-action="DivisionEdit">
    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Edit division</legend>
        <div asp-validation-summary="ModelOnly" class="uk-form-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="uk-margin">
            <input asp-for="DivisionName" class="uk-input" placeholder="Division name" />
            <span asp-validation-for="DivisionName" class="uk-form-danger"></span>
        </div>

        <div class="uk-margin">
            <input asp-for="DivisionCode" class="uk-input" placeholder="Four letter code for this new division" />
            <span asp-validation-for="DivisionCode" class="uk-form-danger"></span>
        </div>

        <div class="uk-margin">
            <input type="submit" value="Update" class="uk-button uk-button-primary" />
        </div>

    </fieldset>
</form>

<div>
    <a asp-controller="Admin" asp-action="DivisionsAll">Back to List</a>
</div>



